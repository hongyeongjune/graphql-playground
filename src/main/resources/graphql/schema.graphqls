type DirectorResponse {
    id: Long!
    name: String!
}

type FilmResponse {
    id: Long!
    title: String!
    subtitle: String
    genre: String!
    runningTime: Float!
    description: String!
    posterImg: String!
    releaseDate: String!
    director: DirectorResponse!
}

type Query {
    getFilm(filmId: Int!): FilmResponse!
    getFilms: [FilmResponse!]!
}